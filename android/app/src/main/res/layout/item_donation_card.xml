<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_margin="3dp"
    android:background="#908D8E"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp"
    android:foreground="?selectableItemBackground"
    android:clickable="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/campaignName"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"

            />


        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timePassed"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            />

        <ImageView android:layout_width="18dp"
            android:layout_height="15dp"
            android:id="@+id/itemsIcon"
            android:layout_below="@id/campaignName"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"

            />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/donatedItems"
            android:layout_toRightOf="@id/itemsIcon"
            android:textSize="16sp"
            android:layout_below="@id/campaignName"
            android:layout_marginLeft="10dp"

            />
        <ImageView android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/dateIcon"
            android:layout_below="@id/itemsIcon"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Date"
            android:layout_toRightOf="@id/dateIcon"
            android:textSize="16sp"
            android:layout_below="@id/donatedItems"
            android:layout_marginLeft="10dp"

            />

        <ImageView android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/timeIcon"
            android:layout_below="@id/dateIcon"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Time"
            android:layout_toRightOf="@id/timeIcon"
            android:textSize="16sp"
            android:layout_below="@id/Date"
            android:layout_marginLeft="10dp"

            />

        <ImageView android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/addressIcon"
            android:layout_below="@id/timeIcon"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Address"
            android:layout_toRightOf="@id/addressIcon"
            android:textSize="16sp"
            android:layout_below="@id/Time"
            android:layout_marginLeft="10dp"

            />
    </RelativeLayout>
</android.support.v7.widget.CardView>

